  max-width 400px
  margin-bottom 2rem
  border default-border
  border-radius 5px
  text-align center
.item-img
  width 100%
.item-info-wrap
  padding 0 1rem
.item-name
  font-weight bold
  font-size 1.7rem
.item-price
  font-style italic
  font-size 1.2rem
.item-buy-button
  width 40%

.add-item
  height 400px
  line-height 400px
  background-color button-color
.add-item:hover
  background-color button-color-transparent-alt
  background-color button-color-transparent
  cursor pointer

.user
  width 95%
  max-width 1080px
  margin 0 auto 1rem auto
  border default-border
  border-radius 5px
  text-align center
.user-email
  padding-top 1rem
  font-weight bold
  font-size 1.2rem
.user-button
  width 16%
  min-width 150px
  margin .5rem 2%
@media only screen and (min-width: mobile-width)
  .user-email
    display inline-block
    width 60%
    text-align left
    padding-left 2%
    padding-top 0
  .user-button
    min-width 0

.pending-user
  max-width 95%
  max-width 1080px
  margin 0 auto 1rem auto
  border default-border
  border-radius 5px
  text-align center
  background-color #f3f3f3
.pending-user-email
  margin-top .5rem
.pending-wrap
  padding 0 1rem
  flexbox()
  flex-wrap wrap
  justify-content space-around
  align-content flex-start
.pending
  margin-bottom 1rem
  border default-border
  border-radius 5px
  background white
.pending-item
  margin .5rem 0

.form
  width 90%
  max-width 600px
  margin 0 auto
.form-title
  width 100%
  margin 0
  padding-top 1rem
  text-align center
.form-input
  display block
  width 100%
  margin-bottom 10px
  padding 5px
  border-radius 5px
  border default-border
  font-size 18px
  line-height 2rem

.half
  display block
  width 100%
@media only screen and (min-width: mobile-width)
  .half
    display inline-block
    width 50%

.hidden
  display none

.error-message
  visibility hidden
  color red
  font-weight bold
  text-align left
  padding 1rem 0
.modal
  display none
  position fixed
  left 0
  top 0
  z-index 100
  width 100%
  height 100%
  overflow auto
  background-color #000
  background-color rgba(0, 0, 0, .5)
.modal-content
  max-width 90%
  margin 10% auto
  padding 2rem
  border default-border
  background-color white
  border-radius 5px
  text-align center
